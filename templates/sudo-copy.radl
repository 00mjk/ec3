
configure sudo_copy (
@begin
    - local_action: command sudo cp {{src} /tmp/{{ src | basename }}
    - local_action: command sudo chown ubuntu /tmp/{{ src | basename }}
    - local_action: command sudo chmod u+r /tmp/{{ src | basename }}
    - copy:
        src: /tmp/{{ src | basename }}
        dest: "{{ dest | default(None) }}"
        owner: "{{ owner | default(None) }}"
        group: "{{ group | default(None) }}"
        mode: "{{ mode | default(None) }}"
@end
)
